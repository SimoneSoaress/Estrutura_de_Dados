def binary_search (lista, item, inicio=0, fim=None):
    if fim is None:
        fim = len(lista)-1
    if inicio<= fim:
        m = (inicio + fim)//2 # m = meio
        if lista[m] == item:
            return m
        if item < lista[m]:
            return binary_search(lista, item, inicio, m-1)
        else:
            return binary_search(lista, item, m+1, fim)
    return None